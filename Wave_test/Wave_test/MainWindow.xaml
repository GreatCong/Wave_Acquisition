<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0" x:Class="Wave_test.MainWindow"
        Title="MainWindow" Height="546" Width="920" Icon="ooopic.ico">
    <Grid x:Name="Wave_test" Margin="0,0,-8,1">

        <d3:ChartPlotter x:Name="plotter" HorizontalAlignment="Left" Margin="19,52,0,0" VerticalAlignment="Top" Height="356" Width="635"/>
        <Button x:Name="button_Start" Content="Start" HorizontalAlignment="Left" Margin="99,429,0,0" VerticalAlignment="Top" Width="75" Click="button_Start_Click"/>
        <Button x:Name="button_stop" Content="Stop" HorizontalAlignment="Left" Margin="213,429,0,0" VerticalAlignment="Top" Width="75" Click="button_stop_Click"/>
        <Button x:Name="button_Clear" Content="Clear" HorizontalAlignment="Left" Margin="322,429,0,0" VerticalAlignment="Top" Width="75" Click="button_Clear_Click"/>
        <Button x:Name="Button_SerialOpen" Content="Open" HorizontalAlignment="Left" Margin="795,95,0,0" VerticalAlignment="Top" Width="75" Click="Button_SerialOpen_Click"/>
        <ComboBox x:Name="ComboBox_SerialName" HorizontalAlignment="Left" Margin="691,91,0,0" VerticalAlignment="Top" Width="75" Height="26" RenderTransformOrigin="0.613,-0.423" DropDownOpened="ComboBox_SerialName_DropDownOpened"/>
        <TextBox x:Name="TextBox_SerialSend" HorizontalAlignment="Left" Height="38" Margin="681,301,0,0" TextWrapping="Wrap" Text="Y" VerticalAlignment="Top" Width="189" Background="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
        <Button x:Name="Button_SerialSend" Content="Send" HorizontalAlignment="Left" Margin="681,356,0,0" VerticalAlignment="Top" Width="75" Click="Button_SerialSend_Click"/>
        <TextBox x:Name="TextBox_SerialReceive" HorizontalAlignment="Left" Height="132" Margin="681,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" Background="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" DataContextChanged="TextBox_SerialReceive_DataContextChanged"/>
        <Label Content="Port  Name" HorizontalAlignment="Left" Margin="681,52,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Button_SerialClear" Content="Clear" HorizontalAlignment="Left" Margin="795,356,0,0" VerticalAlignment="Top" Width="75" Click="Button_SerialClear_Click"/>
        <CheckBox x:Name="CheckBox_IsSerialDataDis" Content="Display ReceiveData" HorizontalAlignment="Left" Margin="684,392,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.616,-0.688" Checked="CheckBox_IsSerialDataDis_Checked"/>

    </Grid>
</Window>
